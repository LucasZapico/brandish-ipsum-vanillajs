{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2],
        "space-in-brackets": ["error", "always"],
        "object-curly-spacing": ["error", "always"],
        "require-jsdoc": "off"
    }
}
